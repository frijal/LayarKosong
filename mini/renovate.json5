{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",

  extends: [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable"
  ],

  // ðŸš« MATIKAN DASHBOARD TOTAL
  dependencyDashboard: false,

  // ðŸš€ JALAN KAPAN PUN
  schedule: ["at any time"],

  onboarding: false,
  timezone: "Asia/Makassar",

  labels: ["dependencies", "renovate-bot"],

  // ðŸ”§ Lockfile langsung update & merge
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    schedule: ["at any time"]
  },

  packageRules: [
    // âœ… PROD: minor & patch auto-merge
    {
      matchDepTypes: ["dependencies"],
      matchUpdateTypes: ["minor", "patch", "pin", "digest"],
      automerge: true,
      platformAutomerge: true,
      groupName: "prod-deps-auto"
    },

    // ðŸ›‘ PROD: major â†’ PR saja
    {
      matchDepTypes: ["dependencies"],
      matchUpdateTypes: ["major"],
      automerge: false
    },

    // âœ… DEV: minor & patch auto-merge
    {
      matchDepTypes: ["devDependencies"],
      matchUpdateTypes: ["minor", "patch", "pin", "digest"],
      automerge: true,
      platformAutomerge: true,
      groupName: "dev-deps-auto"
    },

    // ðŸ›‘ DEV: major â†’ PR saja
    {
      matchDepTypes: ["devDependencies"],
      matchUpdateTypes: ["major"],
      automerge: false
    }
  ],

  // ðŸš« TANPA LIMIT (biar sekali jalan langsung kelar)
  prConcurrentLimit: 0,
  prHourlyLimit: 0
}
