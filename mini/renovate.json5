{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable"
  ],
  "onboarding": false,
  "dependencyDashboard": false,
  "timezone": "Asia/Makassar",
  "labels": ["dependencies", "renovate-bot"],

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },

  "packageRules": [
    {
      "description": "Prod deps: minor & patch auto-merge",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "Production Dependency Updates"
    },
    {
      "description": "Prod deps: major update butuh review",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "groupName": null
    },
    {
      "description": "Dev deps: minor & patch auto-merge",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "Dev Dependency Updates"
    },
    {
      "description": "Dev deps: major update tidak auto-merge",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "groupName": "Dev Dependency Major Updates"
    }
  ],

  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
