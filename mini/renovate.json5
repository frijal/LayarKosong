{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable"
  ],
  "onboarding": false,
  "requireConfig": "optional",
  "dependencyDashboard": true,
  "timezone": "Asia/Makassar",
  "schedule": ["at any time"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "enabledManagers": [
    "npm",
    "github-actions",
    "pip_setup",
    "pip_requirements",
    "dockerfile",
    "perl", // Tambah Manager Perl
    "json-config" // Tambah Manager JSON
  ],
  "customManagers": [
    {
      "customType": "regex",
      // MENGIKUTI SARAN MIGRASI: Scan file .html dan .json
      "managerFilePatterns": ["/\\.html$/", "/\\.json$/"],
      "description": "Scanning seluruh file HTML dan JSON untuk mencari library CDN",
      "matchStrings": [
        "https:\\/\\/unpkg\\.com\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdn\\.jsdelivr\\.net\\/npm\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdnjs\\.cloudflare\\.com\\/ajax\\/libs\\/(?<depName>[^@\\/\\s\"']+)\\/(?<currentValue>[^@\\/\\s\"']+)"
      ],
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "all-minor-patch-auto"
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/.git/**",
    "**/img/**",
    "**/ext/icons/**",
    "**/ext/fontawesome-webfonts/**"
  ],
  "repositoryCache": "enabled"
}
