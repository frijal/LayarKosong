{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable"
  ],

  // ğŸš« MATIKAN DASHBOARD & ONBOARDING
  "dependencyDashboard": false,
  "onboarding": false,
  "timezone": "Asia/Makassar", // Sesuai WITA Balikpapan

  // ğŸš€ JALAN KAPAN PUN (Tanpa Limit)
  "schedule": ["at any time"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,

  "labels": ["dependencies", "renovate-bot"],

  // ğŸ” MANAGERS: Batasi agar scan lebih cepat
  "enabledManagers": ["npm", "github-actions", "pip_setup", "pip_requirements", "dockerfile", "html-self-hosted"],

  // ğŸ§¬ REGEX MANAGER: Sapu Jagat untuk semua library JS/CSS di HTML
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.html$"],
      "description": "Mendeteksi semua library JS/CSS dari CDN populer di ribuan file HTML",
      "matchStrings": [
        "https:\\/\\/unpkg\\.com\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdn\\.jsdelivr\\.net\\/npm\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdnjs\\.cloudflare\\.com\\/ajax\\/libs\\/(?<depName>[^@\\/\\s\"']+)\\/(?<currentValue>[^@\\/\\s\"']+)"
      ],
      "datasourceTemplate": "npm"
    }
  ],

  // ğŸ› ï¸ LOCKFILE MAINTENANCE: Langsung update & merge
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["at any time"]
  },

  "packageRules": [
    // âœ… PROD & DEV: minor & patch auto-merge
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "all-minor-patch-auto"
    },

    // ğŸŒ HTML CDN: Masukkan ke grup auto-merge juga (karena minor/patch biasanya aman)
    {
      "matchManagers": ["custom.regex"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "frontend-cdn-auto"
    },

    // ğŸ›‘ SEMUA MAJOR: PR saja (Wajib cek manual)
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update", "manual-review"]
    },

    // ğŸ¤– GITHUB ACTIONS: Selalu auto-merge
    {
      "matchManagers": ["github-actions"],
      "automerge": true,
      "platformAutomerge": true
    }
  ],

  // ğŸš« OPTIMASI SCANNING (Penting untuk repo 3000+ file)
  "ignorePaths": [
    "**/node_modules/**",
    "**/sementara/**",
    "**/img/**",
    "**/.git/**"
  ],

  "repositoryCache": "enabled"
}
