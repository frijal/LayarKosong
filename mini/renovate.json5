{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable"
  ],
  "onboarding": false,
  "dependencyDashboard": true,
  "timezone": "Asia/Makassar",
  "labels": ["dependencies", "renovate-bot"],
  
  // Fitur perapih package-lock.json otomatis
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 8am on monday"]
  },

  "packageRules": [
    {
      "description": "Minor & Patch langsung automerge",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "Minor and Patch Updates",
      "matchPackageNames": ["*"]
    },
    {
      "description": "Major Update dibuatkan PR tapi tidak automerge",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "groupName": null,
      "matchPackageNames": ["*"]
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
