{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable"
  ],
  
  "onboarding": false,
  "requireConfig": "optional",
  "dependencyDashboard": true,
  "timezone": "Asia/Makassar",

  "schedule": ["at any time"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,

  "enabledManagers": [
    "npm",
    "github-actions",
    "pip_setup",
    "pip_requirements",
    "dockerfile"
  ],

  "customManagers": [
    {
      "customType": "regex",
      // PERBAIKAN: Cari semua file HTML di semua subfolder
      "fileMatch": ["\\.html$"],
      "description": "Mendeteksi library JS/CSS di seluruh file HTML Layar Kosong",
      "matchStrings": [
        "https:\\/\\/unpkg\\.com\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdn\\.jsdelivr\\.net\\/npm\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdnjs\\.cloudflare\\.com\\/ajax\\/libs\\/(?<depName>[^@\\/\\s\"']+)\\/(?<currentValue>[^@\\/\\s\"']+)"
      ],
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver"
    }
  ],

  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "all-minor-patch-auto"
    }
  ],

  "ignorePaths": [
    "**/node_modules/**",
    "**/.git/**",
    "**/img/**", // Abaikan folder img (berisi 1350+ webp) agar cepat
    "**/ext/fontawesome-webfonts/**",
    "**/ext/icons/**"
  ],

  "repositoryCache": "enabled"
}
