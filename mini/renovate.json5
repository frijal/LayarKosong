{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable"
  ],

  // âœ… DASHBOARD HIDUP (Akan muncul di GitHub Issues)
  "dependencyDashboard": true,
  "timezone": "Asia/Makassar",

  "schedule": ["at any time"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,

  "labels": ["dependencies", "renovate-bot"],

  "enabledManagers": ["npm", "github-actions", "pip_setup", "pip_requirements", "dockerfile", "html-self-hosted"],

  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.html$"],
      "description": "Mendeteksi library JS/CSS di HTML",
      "matchStrings": [
        "https:\\/\\/unpkg\\.com\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdn\\.jsdelivr\\.net\\/npm\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdnjs\\.cloudflare\\.com\\/ajax\\/libs\\/(?<depName>[^@\\/\\s\"']+)\\/(?<currentValue>[^@\\/\\s\"']+)"
      ],
      "datasourceTemplate": "npm"
    }
  ],

  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "all-minor-patch-auto"
    },
    {
      "matchManagers": ["custom.regex"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "frontend-cdn-auto"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update", "manual-review"]
    }
  ],

  "ignorePaths": ["**/node_modules/**", "**/sementara/**", "**/img/**", "**/.git/**"],
  "repositoryCache": "enabled"
}
