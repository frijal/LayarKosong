{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":ignoreUnstable"
  ],
  "onboarding": false,
  "requireConfig": "optional",
  "dependencyDashboard": true,
  "timezone": "Asia/Makassar",
  "schedule": ["at any time"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "enabledManagers": ["npm", "github-actions", "pip_setup", "pip_requirements", "dockerfile"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/\\.html$/"],
      "description": "Mendeteksi library JS/CSS di seluruh file HTML Layar Kosong",
      "matchStrings": [
        "https:\\/\\/unpkg\\.com\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdn\\.jsdelivr\\.net\\/npm\\/(?<depName>[^@\\/\\s\"']+)(?:@(?<currentValue>[^\\/\\s\"']+))?",
        "https:\\/\\/cdnjs\\.cloudflare\\.com\\/ajax\\/libs\\/(?<depName>[^@\\/\\s\"']+)\\/(?<currentValue>[^@\\/\\s\"']+)"
      ],
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true,
      "groupName": "all-minor-patch-auto"
    },
    {
      // SEKARANG BEBAS: Semua GitHub Actions (termasuk checkout) akan diupdate
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["/^actions/.*/"],
      "automerge": true,
      "platformAutomerge": true
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/.git/**",
    "**/img/**",
    "**/ext/icons/**",
    "**/ext/fontawesome-webfonts/**"
  ],
  "repositoryCache": "enabled"
}
