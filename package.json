{
  "name": "layarkosong",
  "version": "2.0.0",
  "type": "module",
  "description": "Layar Kosong - Auto RSS Generator, Website Screenshot, dan AI-Powered Index Generator dengan Google Gemini",
  "scripts": {
    "fixseo": "node ext/seo-fixer.js",
    "ci-fix-meta-image": "node ext/seo-fixer.js artikelx",
    "generate-all-meta": "node ext/generator-pro.js",
    "ci-generate-xml-rss": "node ext/generator-pro.js",
    "ci-screenshot": "node ext/screenshot-puppeteer.js",
    "ci-all": "npm run ci-fix-meta-image && npm run ci-generate-xml-rss && npm run ci-screenshot",
    "generate-ai-api": "node ext/generate-ai-api.js",
    "check-deps": "depcheck",
    "lint": "htmlhint \"artikel/**/*.html\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frijal/layarkosong.git"
  },
  "keywords": [
    "rss",
    "feed-generator",
    "screenshot",
    "puppeteer",
    "google-gemini",
    "generative-ai",
    "web-scraping",
    "github-actions",
    "blog-tools"
  ],
  "author": "Fakhrul Rijal <frijal@gmail.com>",
  "license": "Unlicense",
  "homepage": "https://dalam.web.id",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "depcheck": "^1.4.7",
    "htmlhint": "^1.1.4"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.9.8",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-xml-parser": "^4.5.1",
    "glob": "^11.0.0",
    "node-fetch": "^3.3.2",
    "puppeteer": "^23.11.1",
    "sharp": "^0.33.5"
  }
}
