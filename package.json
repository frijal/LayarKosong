{
  "name": "layarkosong",
  "version": "2.0.2",
  "type": "module",
  "description": "Layar Kosong - Auto RSS Generator, Website Screenshot, dan AI-Powered Index Generator",
  "main": "index.js",
   "scripts": {
    "fixseo": "bun run ext/seo-fixer.js",
    "ci-fix-meta-image": "bun run ext/seo-fixer.js artikelx",
    "ci-fix-meta-main": "bun run ext/seo-fixer.js artikel",
    "ci-generate-xml-rss": "bun run ext/generator-pro.js",
    "ci-screenshot": "bun run ext/screenshot-puppeteer.js",
    "ci-all": "bun run ci-fix-meta-image && bun run ci-generate-xml-rss && bun run ci-screenshot",
    "generate-ai-api": "bun run ext/generate-ai-api.js",
    "check-deps": "bun run ext/cek-mubazir.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frijal/layarkosong.git"
  },
  "keywords": [
    "rss",
    "feed-generator",
    "screenshot",
    "puppeteer",
    "google-gemini",
    "generative-ai",
    "web-scraping",
    "github-actions",
    "blog-tools"
  ],
  "author": "Fakhrul Rijal <frijal@gmail.com>",
  "license": "Unlicense",
  "homepage": "https://dalam.web.id",
  "bugs": {
    "url": "https://github.com/frijal/layarkosong/issues"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@minify-html/node": "^0.18.1",
    "@octokit/core": "^7.0.6",
    "@xmldom/xmldom": "^0.9.8",
    "axios": "^1.13.5",
    "cheerio": "^1.2.0",
    "puppeteer": "^24.37.5",
    "sharp": "^0.34.5",
    "tumblr.js": "^5.0.1",
    "fast-xml-parser": "^5.3.7"
  },
  "devDependencies": {
    "wrangler": "^4.67.0"
  }
}
