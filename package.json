{
  "name": "layarkosong",
  "version": "2.0.1",
  "type": "module",
  "description": "Layar Kosong - Auto RSS Generator, Website Screenshot, dan AI-Powered Index Generator",
  "main": "index.js",
  "scripts": {
    "fixseo": "node ext/seo-fixer.js",
    "ci-fix-meta-image": "node ext/seo-fixer.js artikelx",
    "ci-fix-meta-main": "node ext/seo-fixer.js artikel",
    "ci-generate-xml-rss": "node ext/generator-pro.js",
    "ci-screenshot": "node ext/screenshot-puppeteer.js",
    "ci-all": "npm run ci-fix-meta-image && npm run ci-generate-xml-rss && npm run ci-screenshot",
    "generate-ai-api": "node ext/generate-ai-api.js",
    "check-deps": "depcheck",
    "lint": "htmlhint \"artikel/**/*.html\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frijal/layarkosong.git"
  },
  "keywords": [
    "rss",
    "feed-generator",
    "screenshot",
    "puppeteer",
    "google-gemini",
    "generative-ai",
    "web-scraping",
    "github-actions",
    "blog-tools"
  ],
  "author": "Fakhrul Rijal <frijal@gmail.com>",
  "license": "Unlicense",
  "homepage": "https://dalam.web.id",
  "bugs": {
    "url": "https://github.com/frijal/layarkosong/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@octokit/core": "^7.0.6",
    "@xmldom/xmldom": "^0.9.8",
    "axios": "^1.13.2",
    "cheerio": "^1.2.0",
    "express": "^5.2.1",
    "glob": "^13.0.0",
    "puppeteer": "^24.36.0",
    "rss-parser": "^3.13.0",
    "sharp": "^0.34.5",
    "tumblr.js": "^5.0.1"
  },
  "devDependencies": {
    "depcheck": "^1.4.7",
    "htmlhint": "^1.8.0",
    "wrangler": "^4.61.0"
  }
}
