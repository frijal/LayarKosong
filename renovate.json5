{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabled": true,
  "configMigration": true,
  "dependencyDashboard": true,
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 0,
  "ignoreUnstable": true,
  "respectLatest": true,
  "updateNotScheduled": true,
  "separateMinorPatch": false,
  "automergeType": "branch",
  "npm": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": [
      "schedule:weekly"
    ]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": ["arg0"],
    "labels": ["arg0"]
  },
  "digest": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Automerge non-major updates for stable versions",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Automerge linters",
      "extends": ["packages:linters"],
      "automerge": true
    },
    {
      "description": "Automerge types definitions",
      "matchPackageNames": ["@types/**"],
      "automerge": true
    },
    {
      "description": "Global range strategy",
      "matchPackageNames": ["*"],
      "rangeStrategy": "replace"
    }
  ]
}
