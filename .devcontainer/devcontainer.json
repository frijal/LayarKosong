{
  "name": "Layar Kosong - Debian Trixie Bun",
  // Kita pakai base Debian dari Microsoft yang paling mendekati
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  
  "features": {
    // Docker-in-Docker biasanya butuh penyesuaian di Debian terbaru
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },

  // Menggunakan postCreateCommand untuk install Bun secara manual (lebih aman di Debian 13)
  "postCreateCommand": "curl -fsSL https://bun.sh/install | bash && export BUN_INSTALL=\"$HOME/.bun\" && export PATH=\"$BUN_INSTALL/bin:$PATH\" && bun install",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ovensh.bun-vscode"
      ]
    }
  },

  "remoteUser": "vscode"
}
