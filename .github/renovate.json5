{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "abandonments:recommended",
    "replacements:all"
  ],
  "configMigration": true,
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 0,
  "ignoreUnstable": true,
  "respectLatest": true,
  "separateMinorPatch": false,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "artikel/**",
    "mini/requirements.txt",
    "target/**"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "renovate"]
  },
  "prBodyColumns": ["Package", "Type", "Update", "Change", "Pending", "OpenSSF"],
  "prBodyDefinitions": {
    "OpenSSF": "[![OpenSSF Scorecard](https://api.securityscorecards.dev/projects/github.com/{{sourceRepo}}/badge)](https://securityscorecards.dev/viewer/?uri=github.com/{{sourceRepo}})"
  },
  "packageRules": [
    {
      "description": "Global strategy for all dependencies",
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "replace"
    },
    {
      "description": "Rust/Cargo Logic: Menggunakan datasource 'cargo' untuk trigger update",
      "matchDatasources": ["cargo"],
      "matchUpdateTypes": ["minor", "patch", "digest", "lockFileMaintenance"],
      "automerge": true,
      "rangeStrategy": "update-lockfile"
    },
    {
      "description": "Security: Minimum age for stability",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "minimumReleaseAge": "3 days",
      "automerge": true
    },
    {
      "description": "Governance: Require approval for major and unstable 0.x versions",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Governance: 0.x versions follow semver-minor as breaking in Rust",
      "matchCurrentVersion": "/^0/",
      "dependencyDashboardApproval": true
    }
  ]
}
