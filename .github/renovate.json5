{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "abandonments:recommended",
    "replacements:all"
  ],
  "configMigration": true,
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 0,
  "ignoreUnstable": true,
  "respectLatest": true,
  "separateMinorPatch": false,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "artikel/**",
    "mini/requirements.txt",
    "target/**"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "renovate"]
  },
  "prBodyColumns": ["Package", "Type", "Update", "Change", "Pending", "OpenSSF"],
  "prBodyDefinitions": {
    "OpenSSF": "[![OpenSSF Scorecard](https://api.securityscorecards.dev/projects/github.com/{{sourceRepo}}/badge)](https://securityscorecards.dev/viewer/?uri=github.com/{{sourceRepo}})"
  },
  "packageRules": [
    {
      "description": "Global range strategy for applications",
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "replace"
    },
    {
      "description": "Rust/Cargo Specific: Fix datasource name and handle automerge",
      "matchDatasources": ["cargo"],
      "matchUpdateTypes": ["minor", "patch", "digest", "lockFileMaintenance"],
      "automerge": true,
      "rangeStrategy": "update-lockfile"
    },
    {
      "description": "Automerge stable non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "pin", "lockFileMaintenance"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "branch",
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Require approval for major updates and unstable 0.x versions",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Special handling for 0.x versions (unstable ecosystems)",
      "matchCurrentVersion": "/^0/",
      "dependencyDashboardApproval": true
    },
    {
      "description": "NPM safety and strict internal checks",
      "matchDatasources": ["npm"],
      "internalChecksFilter": "strict",
      "minimumReleaseAge": "7 days"
    }
  ]
}
