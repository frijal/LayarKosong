{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "abandonments:recommended",
    "replacements:all"
  ],
  "configMigration": true,
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 5,
  "ignoreUnstable": true,
  "dependencyDashboard": true,
  "ignorePaths": [
    "**/node_modules/**", "**/bower_components/**", "**/vendor/**",
    "artikel/**", "target/**"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "description": "1. Global Range Strategy (Ditaruh paling atas)",
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "replace"
    },
    {
      "description": "2. Khusus Rust: Gunakan update-lockfile untuk SEMUA update cargo",
      "matchDatasources": ["cargo"],
      "rangeStrategy": "update-lockfile"
    },
    {
      "description": "3. JS/NPM: Grouping & Automerge",
      "matchDatasources": ["npm"],
      "matchPackagePatterns": ["^react", "^next"],
      "groupName": "React Ecosystem",
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "4. Python: Stabilitas Tinggi",
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "5. Docker & GitHub Actions: Pin Digests",
      "matchDatasources": ["docker", "github-tags"],
      "pinDigests": true,
      "automerge": true
    },
    {
      "description": "6. Governance: Approval untuk Major & 0.x (Semua Bahasa)",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "7. Governance: Review manual untuk versi 0.x (Unstable)",
      "matchCurrentVersion": "/^0./",
      "dependencyDashboardApproval": true
    }
  ]
}
