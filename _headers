  Cache-Control: public, max-age=604800, immutable

# HALAMAN HTML → WAJIB NO-CACHE supaya AdSense lihat versi terbaru!
/*.html
  Cache-Control: no-store, no-cache, must-revalidate, private
/index.html
/disclaimer.html
/search.html
/feed.html
/sitemap.html
/404.html
/img.html
/artikel
  Cache-Control: no-store, no-cache, must-revalidate, private

# File dinamis → Tetap no-store
/artikel.json
/rss.xml
/feed-*.xml
